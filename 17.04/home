i=100
while i>0:
    i=i-1
    if i//11==0:
        print(i*11)
     
n=int(input(  ))
i=1
while i<=n:
    s=(2*i-1)/(2*i)
    i=i+1
    z=(2*i-1)/(2*i)
    p=z+s 
    p=round(p,4)
    print(i,p)
    
    
    n=int(input(  ))
i=0
while i<=n:
   a=1/2**i
   i=i+1
   b=1/2**i
   if i//2!=0:
       z=a+b
   else: z=a-b
   z=round(z,4)
